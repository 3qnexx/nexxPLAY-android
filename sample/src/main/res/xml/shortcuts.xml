<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
  <shortcut
    android:shortcutId="playvideo"
    android:enabled="true"
    android:icon="@drawable/ic_shortcut_video"
    android:shortcutShortLabel="@string/sc_playvideo"
    android:shortcutLongLabel="@string/sc_playvideo">
    <intent
      android:action="tv.nexx.android.testapp.shortcuts.VIDEO"
      android:targetPackage="tv.nexx.android.testapp"
      android:targetClass="tv.nexx.android.testapp.MainActivity" />
    <categories android:name="android.shortcut.conversation" />
  </shortcut>

  <shortcut
      android:shortcutId="playlive"
      android:enabled="true"
      android:icon="@drawable/ic_shortcut_live"
      android:shortcutShortLabel="@string/sc_playlive"
