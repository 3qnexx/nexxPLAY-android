        android:action="tv.nexx.android.testapp.shortcuts.AUDIO"
        android:targetPackage="tv.nexx.android.testapp"
        android:targetClass="tv.nexx.android.testapp.MainActivity" />
    <categories android:name="android.shortcut.conversation" />
  </shortcut>

  <shortcut
      android:shortcutId="playplaylist"
      android:enabled="true"
      android:icon="@drawable/ic_shortcut_playlist"
      android:shortcutShortLabel="@string/sc_playplaylist"
      android:shortcutLongLabel="@string/sc_playplaylist">
    <intent
        android:action="tv.nexx.android.testapp.shortcuts.PLAYLIST"
        android:targetPackage="tv.nexx.android.testapp"
        android:targetClass="tv.nexx.android.testapp.MainActivity" />
    <categories android:name="android.shortcut.conversation" />
  </shortcut>

</shortcuts>